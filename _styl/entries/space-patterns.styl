                    radial-gradient(circle at 89% 83%, $chocolate 5.5%, transparent 5.5%),
                    radial-gradient(circle at 100% 89%, $chocolate 5%, transparent 5%),
                    radial-gradient(circle at 100% 75%, transparent 6%,
                                                       $chocolate 6%, $chocolate 13%,
                                                       $donut 13%, $donut 18%,
                                                       transparent 18%)
  background-size: $pattern-size
  background-position: center 20px


@media all and (max-width: 959px)
  #space-pizza,
  #space-donuts
    min-height: 280px
  #space-pizza
    border-right: none
    border-bottom: 1px solid #666
