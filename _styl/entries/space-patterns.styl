                    radial-gradient(circle at 10% 84%, $chocolate 5%, transparent 5%),
                    radial-gradient(circle at 0 89%, $chocolate 5%, transparent 5%),
                    radial-gradient(circle at 0 75%, transparent 6%,
                                                       $chocolate 6%, $chocolate 13%,
                                                       $donut 13%, $donut 18%,
                                                       transparent 18%),
                    radial-gradient(circle at 96% 63%, $psprinkle 1%, transparent 1%),
                    radial-gradient(circle at 89% 63%, $bsprinkle 1%, transparent 1%),
