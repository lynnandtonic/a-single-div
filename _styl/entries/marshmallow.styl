/*-----------------------------

Marshmallow

-----------------------------*/

#marshmallow
  background: mediumaquamarine

  div
    width: 100px
    height: 120px
    margin-left: -(@width/2)
    margin-top: -(@height/2 + 10)

    background: white

    background-image: radial-gradient(circle at 50% -70px,
                                                        transparent 50%,
                                                        #f5f5f5 50%)

    border-top-left-radius: 100px 40px
    border-top-right-radius: 100px 40px
    border-bottom-left-radius: 100px 40px
    border-bottom-right-radius: 100px 40px

    border: 4px solid gray

    &:before
      width: 8px
      height: 80px
      margin-left: -(@width/2)

      left: 50%
      top: 125px

      background: lightgrey

      box-shadow: 0 0 0 3px gray,
                  0 -193px 0 lightgrey,
                  0 -193px 0 3px gray

    &:after
      width: 10px
      height: 10px

      left: 20px
      top: 50px

      background: gray

      border-radius: 50%

      box-shadow: 50px 0 0 gray,
                  25px 3px 0 16px #f5f5f5,
                  25px 13px 0 11px gray

