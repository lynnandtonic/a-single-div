/*-----------------------------

Royal Tenenbaums

-----------------------------*/

$glove-pink = #f9a688

#royal-tenenbaums
  background: #a86e4a

  div
    width: 150px
    height: 120px
    margin-left: -(@width/2)
    margin-top: -25px
    background: $glove-pink
    border-radius: 60px 50px 40px 40px

    &:before
      width: 30px
      height: 130px
      right: 35px
      top: -120px
      background-image: linear-gradient(to bottom, $glove-pink 40px,
                                                   transparent 40px,
                                                   transparent 70px,
                                                   $glove-pink 70px)
      border-radius: 30px 25px 0 0
      box-shadow: 35px 50px $glove-pink,
                  -35px 15px $glove-pink,
                  -70px 35px $glove-pink,
                  -65px 142px $glove-pink,
                  -36px 142px $glove-pink,
                  -7px 142px $glove-pink,
                  13px 142px $glove-pink

    &:after
      width: 30px
      height: 130px
      left: -12px
      top: -32px
      background: $glove-pink
      border-radius: 25px 30px 0 0

      -webkit-transform: rotate(-15deg)
      transform: rotate(-15deg)
