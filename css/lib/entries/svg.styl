/*-----------------------------

SVG

-----------------------------*/

$svg-orange = #ff9900
$svg-grey = #3f3f3f


#svg
  background: gold

  div
    width: 240px
    height: @width
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background-color: $svg-orange
    background-repeat: no-repeat
    background-image: linear-gradient(to right, white, white),
                      linear-gradient(to bottom, white, white),
                      linear-gradient(45deg, transparent 41%, white 41%, white 60%, transparent 60%),
                      linear-gradient(-45deg, transparent 41%, white 41%, white 60%, transparent 60%),
                      radial-gradient(circle, white 30%, black 30%, black 54%, transparent 54%),
                      radial-gradient(circle, white 30%, black 30%, black 54%, transparent 54%),
                      radial-gradient(circle, white 30%, black 30%, black 54%, transparent 54%),
                      radial-gradient(circle, white 30%, black 30%, black 54%, transparent 54%),
                      radial-gradient(circle, white 30%, black 30%, black 54%, transparent 54%),
                      radial-gradient(circle, black 50%, transparent 50%),
                      linear-gradient(to right, black, black),
                      radial-gradient(circle, $svg-orange 70%, transparent 70%),
                      radial-gradient(circle, $svg-orange 70%, transparent 70%),
                      radial-gradient(circle, $svg-orange 70%, transparent 70%),
                      radial-gradient(ellipse at 100% 115%, transparent 80%, #ffb13b 80%),
                      radial-gradient(ellipse at 0 0, transparent 80%, #de8500 80%)
    background-size: 10% 60%,
                     60% 11%,
                     38% 38%,
                     38% 38%,
                     35% 35%,
                     35% 35%,
                     35% 35%,
                     35% 35%,
                     35% 35%,
                     95% 95%,
                     88.4% 8%,
                     38% 38%,
                     38% 38%,
                     38% 38%,
                     100% 100%,
                     100% 100%
    background-position: center center,
                         center center,
                         40% 41%,
                         60% 40%,
                         2.8% 51%,
                         16% 16%,
                         center 3%,
                         84% 16%,
                         97.3% 51%,
                         center center,
                         center 54.5%,
                         -1% center,
                         14% 14%,
                         center 0,
                         0 0,
                         0 0
    border-radius: 10px

    &:before
      width: 80%
      height: 37%
      bottom: 9%
      left: 50%
      margin-left: -(@width/2)
      background-color: $svg-grey
      background-image: radial-gradient(ellipse at -35% 80%, black 60%, transparent 60%)
      background-size: 300% 250%
      border-radius: 10px 10px 1px 1px
      box-shadow: 0 0 0 10px black

    &:after
      width: 82%
      height: 42%
      bottom: 7%
      left: 50%
      margin-left: -(@width/2)
      background-repeat: no-repeat
      background-image: radial-gradient(ellipse at 100% 52%, $svg-grey 26%,
                                                             black 26%, black 29%,
                                                             white 29%, white 62%,
                                                             black 62%, black 65%,
                                                             transparent 65%),
                        radial-gradient(ellipse at 0 100%, $svg-grey 26%,
                                                           black 26%, black 29%,
                                                           white 29%, white 66%,
                                                           black 66%, black 69%,
                                                           transparent 69%),
                        linear-gradient(to top, black, black),
                        radial-gradient(ellipse at 0 52%, black 29%, transparent 29%),
                        radial-gradient(ellipse at 0 52%, white 62%, transparent 62%),
                        radial-gradient(ellipse at 100% 0, black 29%, white 29%, white 66%, transparent 66%), // S
                        linear-gradient(79deg, transparent 31%,
                                               black 31%, black 33%,
                                               white 33%, white 55%,
                                               transparent 55%),
                        linear-gradient(-79deg, transparent 31%,
                                               black 31%, black 33%,
                                               white 33%, white 55%,
                                               transparent 55%),
                        linear-gradient(79deg, transparent 55%, black 55%, black 57%, transparent 57%),
                        linear-gradient(-79deg, transparent 55%, black 55%, black 57%, transparent 57%), // V
                        radial-gradient(ellipse at 50% 100%, $svg-grey 26%,
                                                             black 26%, black 29%,
                                                             white 29%, white 62%,
                                                             black 62%, black 65%,
                                                             transparent 65%),
                        linear-gradient(to left, transparent 4%,
                                                 black 4%, black 32%,
                                                 transparent 32%),
                        radial-gradient(ellipse at 50% 0, black 29%, white 29%, white 62%, transparent 62%),
                        linear-gradient(to right, transparent 5%,
                                                  black 5%, black 6.5%,
                                                  white 6.5%, white 29.5%,
                                                  black 29.5%, black 31.5%,
                                                  transparent 31.5%),
                        linear-gradient(to left, transparent 7%,
                                                 white 7%,
                                                 white 53%,
                                                 transparent 53%),
                        linear-gradient(to left, transparent 4%,
                                                 black 4%, black 55%,
                                                 transparent 55%),
                        linear-gradient(to left, transparent 4%,
                                                 black 4%, black 6.4%,
                                                 white 6.4%, white 29.5%,
                                                 transparent 29.5%) //G
      background-size: 17% 60%,
                       15% 28%,
                       9.2% 2%,
                       17% 60%,
                       17% 60%,
                       15% 28%, // S
                       26% 94%,
                       26% 94%,
                       26% 94%,
                       26% 94%, // V
                       32% 30%,
                       32% 3%,
                       32% 30%,
                       32% 50%,
                       32% 16%,
                       32% 17%,
                       32% 33% // G
      background-position: 6% 3%,
                           24.5% 4.2%,
                           29.1% 31%,
                           25% 101.5%,
                           25% 102.5%,
                           8.2% 102.5%, // S
                           45.5% 68%,
                           54.5% 68%,
                           45.5% 68%,
                           54.5% 68%, // V
                           92% 1%,
                           92% 30%,
                           92% 105%,
                           92% 50%,
                           92% 53.2%,
                           92% 52%,
                           92% 65% // G 
