                0 205px 0 -5px $mendls-red,
                0 205px $mendls-pink,
                -105px 205px 0 -6px $mendls-pink,
                -105px 205px 0 -5px $mendls-red,
                -105px 205px $mendls-pink,
                115px 205px 0 -6px $mendls-pink,
                115px 205px 0 -5px $mendls-red,
                115px 205px $mendls-pink,
                -80px 104px 0 -6px $mendls-pink,
                -80px 104px 0 -5px $mendls-red,
                -80px 104px $mendls-pink,
                40px 104px 0 -6px $mendls-pink,
                40px 104px 0 -5px $mendls-red,
                40px 104px $mendls-pink

    @media (max-width: 400px)
      top: 30px

