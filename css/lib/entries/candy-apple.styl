/*-----------------------------

Candy Apple

-----------------------------*/

#candy-apple
  background: #cbe3ed

  div
    width: 150px
    height: 150px
    margin-left: -(@width/2)
    margin-top: -20px

    background: crimson
    background-image: radial-gradient(ellipse at 22% 30%,
                                                      white(.9) 0,
                                                      white(0) 15%)

    border-radius: 80px 80px 100px 100px
    box-shadow: inset -8px -8px 8px black(.1)

    &:before
      width: 130px
      height: 26px
      margin-left: -(@width/2)
      left: 50%
      top: 125px

      background: crimson
      border-radius: 50%
      box-shadow: inset 0 -10px 8px crimson,
                  inset -5px -18px 8px black(.1)

    &:after
      width: 40px
      height: 150px
      margin-left: -(@width/2)
      left: 50%
      top: -130px

      background-image: linear-gradient(to right, transparent 30%,
                                                  burlywood 30%,
                                                  darken(burlywood, 20) 70%,
                                                  transparent 70%)

      border-bottom-right-radius: 30px 10px
      border-bottom-left-radius: 30px 10px

      box-shadow: 0 3px 0 black(.2)